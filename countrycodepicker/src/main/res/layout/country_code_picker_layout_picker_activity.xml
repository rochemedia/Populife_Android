<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <RelativeLayout
      android:id="@+id/ll_title_bar"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:background="@color/colorTitleBarBg"
      android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/page_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="finishCurrentActivity"
        android:paddingLeft="20dp"
        android:paddingRight="8dp">

      <ImageButton
          android:id="@+id/iv_back"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:background="@null"
          android:onClick="finishCurrentActivity"
          android:src="@drawable/ic_back"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/select_country"
        android:textColor="@color/color_ff212322"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dp"
        android:background="#e6e7e8"/>

  </RelativeLayout>


  <EditText
      android:id="@+id/search_edt"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/ll_title_bar"
      android:hint="@string/search_hint"
      android:imeOptions="flagNoExtractUi"
      android:layout_margin="20dp"
      android:maxLines="1"
      android:singleLine="true"
      android:paddingLeft="10dp"
      android:drawablePadding="10dp"
      android:paddingRight="10dp"
      android:drawableLeft="@drawable/search_icon"
      android:background="@drawable/shape_bg_search_view"
      android:textColor="@color/color_ff212322" />

  <ListView
      android:id="@+id/country_dialog_lv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/search_edt"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:dividerHeight="1dp"/>

  <TextView
      android:id="@+id/no_result_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/search_edt"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="60dp"
      android:text="@string/no_result_found"
      android:textColor="@android:color/primary_text_light"
      android:visibility="gone" />

</RelativeLayout>
