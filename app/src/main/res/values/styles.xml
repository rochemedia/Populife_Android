    <declare-styleable name="ExEditText">
        <attr name="inputType" format="integer">
            <flag name="normal" value="0" />
            <flag name="password" value="1" />
            <flag name="verificationCode" value="2" />
            <flag name="account" value="3" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="text" format="string" />
        <attr name="label" format="string" />
        <attr name="isVisiblePwd" format="boolean" />
        <attr name="maxLength" format="integer" />
        <attr name="paddingLeftInner" format="dimension" />
        <attr name="paddingRightInner" format="dimension" />
    </declare-styleable>

</resources>
