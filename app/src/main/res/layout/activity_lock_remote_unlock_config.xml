<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_add_device_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_gateway_icon" />

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_remote_unlock_hint"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:textSize="14sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_mode"
                    android:textColor="@color/text_color_ffee2737"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_lock_remote_unlock_config_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/on"
                    android:textColor="@color/text_color_ffee2737"
                    android:textSize="14sp"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tv_lock_remote_unlock_config_switch"
                style="@style/btn_style_main"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_width="186dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/turn_on" />

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</LinearLayout>