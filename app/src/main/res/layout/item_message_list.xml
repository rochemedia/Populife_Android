<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_circle_main_color"
        android:padding="5dp"
        android:src="@drawable/ic_notification"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/tv_item_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/tv_item_message_date"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/text_gray_dark"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_item_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/app_name"
            android:textColor="@color/text_gray_light"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_item_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_message_title"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="@color/text_gray_medium"
            android:textSize="14sp"/>

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>
