<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_item_lock_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/text_gray_dark"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item_lock_group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_clock_symbol"
            android:drawablePadding="8dp"
            android:text="@string/app_name"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_gray_medium"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_item_lock_group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock_symbol"
            android:drawablePadding="8dp"
            android:text="@string/num_zero"
            android:textColor="@color/text_gray_medium"
            android:textSize="12sp"/>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
