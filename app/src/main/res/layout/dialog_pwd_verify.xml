<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="35dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_base64_code_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/enter_pwd"
            android:maxLength="6"
            android:textColor="@color/text_gray_dark"
            android:textColorHint="@color/text_gray_light"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_base64_code"
            android:layout_width="66dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:background="@color/gray_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <include layout="@layout/layout_view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/tv_base64_code_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_main"
            android:textSize="16dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>

        <TextView
            android:id="@+id/tv_base64_code_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/text_main"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>