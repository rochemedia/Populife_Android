<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_view_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/dimens_dp_20"
                android:src="@drawable/maintenance_service"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:textColor="@color/text_color_ffb1b3b6"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/sign_action_btn_margin_top"
                android:text="@string/welcome_to_maintenance_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_maintenance_request_btn"
                style="@style/btn_style_main"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_marginTop="@dimen/sign_action_btn_margin_top"
                android:background="@drawable/selector_btn_main"
                android:text="@string/maintenance_request" />

            <include
                android:id="@+id/ll_maintenance_progress_enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_dp_20"
                layout="@layout/key_pwd_type_select_item" />

            <include layout="@layout/layout_view_line"/>

            <include
                android:id="@+id/ll_check_warranty_status"
                layout="@layout/key_pwd_type_select_item" />
            <include layout="@layout/layout_view_line"/>

            <include
                android:id="@+id/ll_buy_popucare_service"
                layout="@layout/key_pwd_type_select_item" />
            <include layout="@layout/layout_view_line"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
