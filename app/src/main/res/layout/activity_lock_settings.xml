<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/list_item_overall">

                <TextView
                    style="@style/list_item_title"
                    android:text="@string/serial_number" />

                <TextView
                    android:id="@+id/tv_lock_settings_serial_number"
                    style="@style/list_item_description" />

            </LinearLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout
                android:id="@+id/ll_lock_settings_mac_id"
                style="@style/list_item_overall">

                <TextView
                    style="@style/list_item_title"
                    android:text="@string/mac_id" />

                <TextView
                    android:id="@+id/tv_lock_settings_mac_id"
                    style="@style/list_item_description" />

                <ImageView
                    android:id="@+id/iv_lock_settings_mac_display"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mac_display" />

            </LinearLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout style="@style/list_item_overall">

                <TextView
                    style="@style/list_item_title"
                    android:text="@string/battery" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_lock_settings_battery_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sync_battery" />

                <ImageView
                    android:id="@+id/iv_lock_settings_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_battery_100" />

                <TextView
                    android:id="@+id/tv_lock_settings_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hundred_percent"
                    android:textColor="@color/battery_high_green"
                    android:textSize="12sp" />

            </LinearLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout
                android:id="@+id/ll_lock_settings_validity_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/validity_period" />

                    <TextView
                        android:id="@+id/tv_lock_settings_validity_period"
                        style="@style/list_item_description" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/start_time" />

                    <TextView
                        android:id="@+id/tv_lock_settings_start_time"
                        style="@style/list_item_description" />

                </LinearLayout>

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/end_time" />

                    <TextView
                        android:id="@+id/tv_lock_settings_end_time"
                        style="@style/list_item_description" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_lock_name"
                style="@style/list_item_overall">

                <TextView
                    style="@style/list_item_title"
                    android:text="@string/lock_name" />

                <TextView
                    android:id="@+id/tv_lock_settings_lock_name"
                    style="@style/list_item_description" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_more_detail" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_lock_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/lock_group" />


                    <TextView
                        android:id="@+id/tv_lock_settings_lock_group"
                        style="@style/list_item_description" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_more_detail" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_admin_passcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/admin_password" />

                    <TextView
                        android:id="@+id/tv_lock_settings_admin_passcode"
                        style="@style/list_item_description" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_more_detail" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_view_line" />
            <Space
                android:id="@+id/space_lock_settings_lock_time"
                android:layout_height="0dp"
                android:layout_width="match_parent" />

            <LinearLayout
                android:id="@+id/ll_lock_settings_lock_time"
                style="@style/list_item_overall">


                <TextView
                    style="@style/list_item_title"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="@string/adjus_lock_time" />

                <ImageView
                    android:id="@+id/iv_lock_settings_lock_time_help"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="6dp"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/help_icon" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_more_detail" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_auto_locking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/automatic_locking" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_more_detail" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_remote_unlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/unlock_remotely" />

                    <TextView
                        android:id="@+id/tv_lock_settings_remote_unlock_state"
                        style="@style/list_item_description" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_more_detail" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lock_settings_lock_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/layout_view_line" />

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/lock_update" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_more_detail" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout
                android:id="@+id/ll_lock_settings_keypad_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_view_line"/>

                <LinearLayout style="@style/list_item_overall">

                    <TextView
                        style="@style/list_item_title"
                        android:text="@string/lock_sound"/>

                    <TextView
                        android:id="@+id/tv_lock_settings_keypad_volume"
                        style="@style/list_item_description"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_more_detail"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_lock_settings_delete"
                style="@style/btn_style_main"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="40dp"
                android:text="@string/delete" />

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>
