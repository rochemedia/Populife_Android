<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gateway_binded_lock_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lock_time"
                android:textColor="@color/common_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_gateway_binded_lock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/common_text_color"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/tv_gateway_binded_lock_time_read"
                style="@style/btn_style_main"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textColor="@color/common_text_color"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_trans_stroke_white"
                android:text="@string/read_lock_time"/>

            <TextView
                android:id="@+id/tv_gateway_binded_lock_time_calibrate"
                style="@style/btn_style_main"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/common_text_color"
                android:background="@drawable/bg_trans_stroke_white"
                android:text="@string/calibrate_lock_time"/>

            <TextView
                android:id="@+id/tv_gateway_binded_lock_remote_unlock"
                style="@style/btn_style_main"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/common_text_color"
                android:background="@drawable/bg_trans_stroke_white"
                android:text="@string/unlock_remotely"/>

            <TextView
                android:id="@+id/tv_gateway_binded_lock_freeze"
                style="@style/btn_style_main"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textColor="@color/common_text_color"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_trans_stroke_white"
                android:text="@string/freeze_lock"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_gateway_binded_lock_unfreeze"
                style="@style/btn_style_main"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textColor="@color/common_text_color"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_trans_stroke_white"
                android:text="@string/unfreeze_lock"
                android:visibility="gone"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>