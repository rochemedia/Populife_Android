<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>


    <com.populstay.populife.ui.widget.exedittext.ExEditText
        android:layout_marginTop="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:id="@+id/et_modify_nickname"
        app:hint="@string/enter_nickname"
        app:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginTop="8dp"
        android:text="@string/note_nickname_format"
        android:textColor="@color/text_gray_light"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_sign_action_btn"
        style="@style/btn_style_main"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:background="@drawable/selector_btn_main"
        android:enabled="false"
        android:text="@string/save" />

</LinearLayout>
