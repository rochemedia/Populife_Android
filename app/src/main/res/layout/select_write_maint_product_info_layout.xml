<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="16sp"
        android:textColor="@color/common_text_color"
        android:id="@+id/select_write_maint_product_info"
        android:text="@string/select_write_maint_product_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="@string/label_select_product"
        style="@style/maintenance_request_item_label" />


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="14dp"
        android:id="@+id/product_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/label_product_equipment_number"
            android:layout_marginTop="0dp"
            style="@style/maintenance_request_item_label" />

        <TextView
            android:id="@+id/tv_find_the_device_number_btn"
            android:text="@string/hint_find_the_device_number"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_ffee2737"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.populstay.populife.ui.widget.exedittext.ExEditText
        android:layout_marginTop="@dimen/common_edit_text_margin_top"
         app:inputType="normal"
        android:id="@+id/et_product_equipment_number"
        app:hint="@string/hint_product_equipment_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="@string/label_problem_description"
        style="@style/maintenance_request_item_label" />


    <EditText
        android:id="@+id/et_problem_description"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#FFCCCDCD"
        android:background="@drawable/bg_trans_stroke_bottom"
        android:gravity="top"
        android:hint="@string/hint_problem_description"
        android:maxLength="200"
        android:textColor="@color/text_gray_dark"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_feedback_submit_words_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/words_num_limit_200"
        android:textColor="@color/text_gray_medium"
        android:textSize="12sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/label_buy_info"
            android:layout_marginTop="0dp"
            style="@style/maintenance_request_item_label" />

        <TextView
            android:text="@string/hint_buy_info"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_ffb1b3b6"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_date_btn"
        style="@style/btn_style_main"
        android:textColor="@color/common_text_color"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:drawableRight="@drawable/select_date_icon"
        android:background="@drawable/selector_bg_stroke"
        android:text="@string/select_buy_date" />

    <TextView
        android:id="@+id/tv_select_certificate_btn"
        style="@style/btn_style_main"
        android:textColor="@color/common_text_color"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:drawableRight="@drawable/select_upload_icon"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:background="@drawable/selector_bg_stroke"
        android:text="@string/select_buy_certificate" />

    <TextView
        android:text="@string/hint_doc_pattern"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dimens_dp_10"
        android:textColor="@color/text_color_ffb1b3b6"
        android:layout_height="wrap_content"/>

</LinearLayout>
