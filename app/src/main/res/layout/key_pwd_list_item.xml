<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimens_dp_10"
    app:cardElevation="@dimen/dimens_dp_6"
    android:layout_marginLeft="@dimen/common_page_left_right_space"
    android:layout_marginRight="@dimen/common_page_left_right_space"
    android:layout_marginTop="@dimen/common_page_left_right_space"
    app:contentPadding="@dimen/dimens_dp_20">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.populstay.populife.ui.widget.extextview.ExTextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_name"
                android:text="1"
                android:textColor="@color/common_text_color"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_time"
                android:text="1111111111"
                android:gravity="right"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimens_dp_10"
                android:textSize="12sp"
                android:textColor="@color/text_color_ffb1b3b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="14dp"
            android:id="@+id/ll_time_range"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="2020-08-06 15:25:05"
                android:id="@+id/tv_start_time"
                android:gravity="center"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:textColor="@color/text_color_ffb1b3b6"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/arrow_right_icon"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="2020-08-06 15:25:05"
                android:id="@+id/tv_end_time"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/text_color_ffb1b3b6"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_marginTop="14dp"
            android:text="45465465465"
            android:id="@+id/tv_pwd"
            android:textSize="22sp"
            android:textColor="@color/common_text_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_action_btns"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_view_line"/>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/dimens_dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/delete_icon"
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/send_icon"
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/edit_icon"
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

