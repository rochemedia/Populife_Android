<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/device_card_single_bg"
    android:gravity="center_vertical">


    <ImageView
        android:src="@drawable/deadbolt_inactive"
        android:id="@+id/iv_device_icon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical|left"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/lock_type_deadbolt"
        android:textColor="@color/device_card_text_color_inactive"
        android:textSize="20sp" />


</LinearLayout>
