<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar" />

    <LinearLayout
        android:id="@+id/ll_me_user_avatar"
        style="@style/list_item_overall_me">

        <TextView
            style="@style/list_item_title_me"
            android:text="@string/personal_center_account_head_icon"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_user_avatar"
            android:layout_marginRight="10dp"
            app:civ_border_color="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_more_detail"
            android:tint="@color/text_gray_light"/>

    </LinearLayout>

    <include layout="@layout/layout_view_line"/>

    <LinearLayout
        android:id="@+id/ll_me_nick_name"
        style="@style/list_item_overall_me">

        <TextView
            style="@style/list_item_title"
            android:layout_marginRight="10dp"
            android:text="@string/nick_name"/>

        <TextView
            android:id="@+id/tv_nick_name"
            style="@style/list_item_title_me"
            android:gravity="right"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_gray_light" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_more_detail"
            android:tint="@color/text_gray_light"/>

    </LinearLayout>

    <include layout="@layout/layout_view_line"/>

    <LinearLayout
        android:id="@+id/ll_me_phone"
        style="@style/list_item_overall_me">

        <TextView
            style="@style/list_item_title"
            android:layout_marginRight="10dp"
            android:text="@string/phone"/>

        <TextView
            style="@style/list_item_title_me"
            android:gravity="right"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_gray_light" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_more_detail"
            android:tint="@color/text_gray_light"/>

    </LinearLayout>

    <include layout="@layout/layout_view_line"/>

    <LinearLayout
        android:id="@+id/ll_me_email"
        style="@style/list_item_overall_me">

        <TextView
            style="@style/list_item_title"
            android:layout_marginRight="10dp"
            android:text="@string/email"/>

        <TextView
            style="@style/list_item_title_me"
            android:gravity="right"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_gray_light" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_more_detail"
            android:tint="@color/text_gray_light"/>

    </LinearLayout>

    <include layout="@layout/layout_view_line"/>

    <LinearLayout
        android:id="@+id/ll_me_pwd"
        style="@style/list_item_overall_me">

        <TextView
            style="@style/list_item_title"
            android:layout_marginRight="10dp"
            android:text="@string/personal_center_account_phone"/>

        <TextView
            style="@style/list_item_title_me"
            android:gravity="right"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_gray_light" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_more_detail"
            android:tint="@color/text_gray_light"/>

    </LinearLayout>

    <include layout="@layout/layout_view_line"/>


</LinearLayout>
