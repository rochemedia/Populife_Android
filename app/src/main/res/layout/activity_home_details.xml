<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar" />

    <RelativeLayout
        android:id="@+id/ll_space_name"
        android:paddingLeft="@dimen/common_page_left_right_space"
        android:paddingRight="@dimen/common_page_left_right_space"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/my_space"
            android:layout_gravity="left"
            android:textColor="@color/common_text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_space_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_home_name_label"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="我的空间"
            android:layout_gravity="right"
            android:textColor="@color/text_color_ffb1b3b6"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_go_to_light_grey"
            android:textSize="16sp" />


    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:paddingLeft="@dimen/common_page_left_right_space"
        android:paddingRight="@dimen/common_page_left_right_space"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_device_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/all_device_num_space"
            android:layout_gravity="left"
            android:textColor="@color/common_text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_home_device_num_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_home_device_num_label"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0"
            android:layout_gravity="right"
            android:textColor="@color/text_color_ffb1b3b6"
            android:textSize="16sp" />


    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>


    <TextView
        android:layout_margin="@dimen/common_page_left_right_space"
        android:layout_gravity="bottom"
        android:id="@+id/tv_delete_space_btn"
        style="@style/btn_style_main"
        android:background="@drawable/selector_btn_main"
        android:text="@string/delete_space" />


</LinearLayout>
