<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/mall_list_card_item"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/product_type_popu_care_name"
        android:textColor="@color/common_text_color"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/product_price"
        android:textColor="@color/text_main"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:visibility="gone"
        android:text="@string/product_type_popu_care_desc"
        android:textColor="@color/common_text_color"
        android:textSize="14sp" />


    <ImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/product_popu_care"
        android:id="@+id/iv_product_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
