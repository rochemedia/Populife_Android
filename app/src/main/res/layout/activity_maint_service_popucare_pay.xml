<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_view_titlebar" />

    <ScrollView
        android:id="@+id/content_view"
        android:layout_marginTop="@dimen/common_page_left_right_space"
        android:layout_marginBottom="@dimen/common_page_left_right_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@drawable/product_popu_care"
                    android:id="@+id/iv_product_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimens_dp_20"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_toRightOf="@+id/iv_product_icon"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/product_type_popu_care_name"
                        android:textColor="@color/common_text_color"
                        android:textSize="22sp" />


                    <TextView
                        android:layout_alignLeft="@+id/tv_product_name"
                        android:layout_below="@+id/tv_product_name"
                        android:id="@+id/tv_product_price"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="@string/product_price"
                        android:textColor="@color/text_main"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_marginBottom="140dp"
                android:layout_marginTop="@dimen/common_page_left_right_space"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:lineSpacingMultiplier="2"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/product_type_popu_care_desc"
                android:textColor="@color/common_text_color"
                android:textSize="14sp" />


            <include layout="@layout/layout_view_line"/>

            <LinearLayout
                android:layout_margin="@dimen/common_page_left_right_space"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/payment_type"
                    android:layout_width="@dimen/dimens_dp_10"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/common_text_color"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/pay_pal_logo"
                    android:layout_width="220dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <include layout="@layout/layout_view_line"/>

            <TextView
                android:id="@+id/tv_payment_confirm_btn"
                style="@style/btn_style_main"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_btn_main"
                android:text="@string/payment_confirm" />

        </LinearLayout>


    </ScrollView>


    <include
        android:visibility="gone"
        android:id="@+id/maint_service_popucare_pay_request_success_layout"
        layout="@layout/maint_service_popucare_pay_request_success_layout" />

</LinearLayout>
