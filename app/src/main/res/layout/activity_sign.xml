<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_page_title_bar_height"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/page_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="finishCurrentActivity"
            android:paddingLeft="@dimen/common_page_left_right_space"
            android:paddingRight="8dp">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="finishCurrentActivity"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

        <TextView
            android:id="@+id/page_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:paddingRight="@dimen/common_page_left_right_space"
            android:text="@string/page_action"
            android:textColor="@color/sign_page_action_text"
            android:textSize="@dimen/sign_page_action_text" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/page_title"
        android:textColor="@color/sign_page_title_text"
        android:textSize="@dimen/sign_page_title_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/common_page_left_right_space">


        <com.populstay.populife.ui.widget.exedittext.ExEditText
            android:id="@+id/et_sign_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_edit_text_margin_top"
            app:hint="@string/user_name_edit_hint"
            app:inputType="account" />

        <com.populstay.populife.ui.widget.exedittext.ExEditText
            app:label="@string/password"
            app:hint="@string/password"
            app:inputType="password"
            app:maxLength="20"
            android:id="@+id/et_sign_pwd"
            android:layout_marginTop="@dimen/common_edit_text_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.populstay.populife.ui.widget.exedittext.ExEditText
            app:label="@string/confirm_password"
            app:hint="@string/confirm_password"
            app:inputType="password"
            app:maxLength="20"
            android:id="@+id/et_confirm_pwd"
            android:layout_marginTop="@dimen/common_edit_text_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.populstay.populife.ui.widget.exedittext.ExEditText
            android:id="@+id/et_sign_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_edit_text_margin_top"
            app:hint="@string/verification_code"
            app:inputType="verificationCode"
            app:label="@string/verification_code"
            app:maxLength="6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_switch_sign_type"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_edit_text_margin_top"
                android:padding="8dp"
                android:text="@string/sign_in_by_verify_code"
                android:textColor="#FF212322"
                android:textSize="14sp" />


            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_edit_text_margin_top"
                android:padding="8dp"
                android:text="@string/forgot_pwd"
                android:textColor="#FF212322"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_terms"
            android:layout_marginTop="@dimen/common_edit_text_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/cb_sign_user_terms"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="@null"
                style="@style/user_terms_confirm_check_box" />

            <com.populstay.populife.ui.widget.extextview.ExTextView
                android:layout_toRightOf="@+id/cb_sign_user_terms"
                android:id="@+id/tv_sign_user_terms"
                android:lineHeight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note_sign_up_agree_user_terms"
                android:textColor="#FF212322"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sign_action_btn"
            style="@style/btn_style_main"
            android:layout_marginTop="@dimen/sign_action_btn_margin_top"
            android:background="@drawable/selector_btn_main"
            android:enabled="false"
            android:text="@string/sign_in" />

        <include layout="@layout/layout_space_vertical" />


        <TextView
            android:id="@+id/tv_switch_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/switch_language"
            android:textColor="#FF212322"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>