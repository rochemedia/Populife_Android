<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/common_dialog_left_right_space"
    android:background="@drawable/border_round_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_page_left_right_space"
    android:paddingBottom="@dimen/common_page_left_right_space">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/common_page_left_right_space"
        android:text="@string/access_type"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/dialog_title_size" />

    <include layout="@layout/layout_view_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

           <RadioGroup
               android:id="@+id/radio_group"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <RadioButton
                   android:id="@+id/rb_1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/key_pwd_permanent"
                   style="@style/check_box_right_icon" />

               <RadioButton
                   android:id="@+id/rb_2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/key_pwd_period"
                   style="@style/check_box_right_icon" />
               <RadioButton
                   android:id="@+id/rb_3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/key_pwd_one_time"
                   style="@style/check_box_right_icon" />
               <RadioButton
                   android:id="@+id/rb_4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/key_pwd_custom"
                   style="@style/check_box_right_icon" />
           </RadioGroup>

    </ScrollView>

    <include layout="@layout/layout_view_line" />

    <TextView
        android:id="@+id/tv_cancel_btn"
        style="@style/btn_style_main"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:background="@drawable/selector_btn_main"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/tv_save_btn"
        style="@style/btn_style_main"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:background="@drawable/selector_btn_main"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:text="@string/save" />


</android.support.v7.widget.LinearLayoutCompat>