<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_view_titlebar"/>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--维修状态-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/common_page_left_right_space"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/guarantee_1"
                    android:layout_width="match_parent"
                    android:textColor="@color/common_text_color"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvApplyNo"
                        android:layout_alignParentLeft="true"
                        android:text="设备号: 1234567890"
                        android:layout_width="wrap_content"
                        android:textColor="@color/common_text_color"
                        android:textSize="14sp"
                        android:layout_toLeftOf="@+id/tvCheckMaintenanceOrder"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/product_deadbolt"
                        android:id="@+id/ivDeviceImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvDeviceName"
                        android:text="@string/lock_type_deadbolt"
                        android:layout_width="wrap_content"
                        android:textColor="@color/common_text_color"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_view_line"/>

            <LinearLayout
                android:layout_marginTop="@dimen/common_page_left_right_space"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/selected_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dimens_dp_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="维修和服务范围：有效"
                        android:textSize="16sp"
                        android:textColor="@color/common_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/dimens_dp_10"
                        android:text="您的产品享有 Populife 有限保修的硬件维修和服务。"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/dimens_dp_10"
                        android:text="预计到期日：2021年4月18日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/dimens_dp_10"
                        android:text="安排维修"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_ffee2737"
                        android:drawableRight="@drawable/arrow_go_to_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    

</LinearLayout>
