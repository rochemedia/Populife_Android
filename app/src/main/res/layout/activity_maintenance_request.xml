<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_view_titlebar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/common_page_left_right_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/populife_maintenance_request"
                android:layout_width="match_parent"
                android:textColor="@color/common_text_color"
                android:textSize="24sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_after_sales_service_process_guide_hint"
                android:text="@string/after_sales_service_process_guide_hint"
                android:layout_width="match_parent"
                android:textColor="@color/text_color_ffee2737"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="40dp"
                android:text="@string/select_country_guide_hint"
                android:layout_width="match_parent"
                android:textColor="@color/common_text_color"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_select_country_btn"
                style="@style/btn_style_main"
                android:layout_marginTop="@dimen/sign_action_btn_margin_top"
                android:background="@drawable/selector_btn_main"
                android:text="@string/select_country_area" />


            <include layout="@layout/select_write_maint_product_info_layout" />

            <include layout="@layout/select_write_maint_logistics_info_layout" />

            <TextView
                android:id="@+id/tv_maintenance_request_btn"
                style="@style/btn_style_main"
                android:layout_marginTop="@dimen/sign_action_btn_margin_top"
                android:background="@drawable/selector_btn_main"
                android:text="@string/submit" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
