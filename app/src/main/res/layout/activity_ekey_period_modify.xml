<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>

    <LinearLayout style="@style/list_item_overall">

        <TextView
            style="@style/list_item_title"
            android:text="@string/start_time"/>

        <TextView
            android:id="@+id/tv_ekey_period_modify_start_time"
            style="@style/list_item_description" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_go_to_light_grey"/>

    </LinearLayout>

    <include layout="@layout/layout_view_line"/>

    <LinearLayout
        style="@style/list_item_overall">

        <TextView
            style="@style/list_item_title"
            android:text="@string/end_time"/>

        <TextView
            android:id="@+id/tv_ekey_period_modify_end_time"
            style="@style/list_item_description" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_go_to_light_grey"/>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>