<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>

    <com.populstay.populife.ui.widget.exedittext.ExEditText
        android:id="@+id/et_modify_passcode"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_edit_text_margin_top"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        app:hint="@string/enter_password"
        app:inputType="number" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginTop="8dp"
        android:text="@string/note_passcode_format"
        android:textColor="@color/gray_medium"
        android:textSize="12sp"/>

    <TextView
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:id="@+id/tv_save"
        style="@style/btn_style_main"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:background="@drawable/selector_btn_main"
        android:enabled="false"
        android:text="@string/save" />

</LinearLayout>
