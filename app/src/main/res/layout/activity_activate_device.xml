<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_add_device_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_add_device" />

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_height="wrap_content"
                android:text="@string/add_device_activate_hint"
                android:textColor="@color/common_text_color"
                android:textSize="14sp" />

            <CheckBox
                android:layout_marginTop="15dp"
                android:id="@+id/cb_confirm_activate_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_gravity="center_horizontal"
                android:text="@string/confirm_device_activate_hint"
                android:drawablePadding="6dp"
                style="@style/add_device_check_box"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:background="@drawable/bg_time_count_down"
                android:orientation="vertical"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_show_count_down_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/common_text_color"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seconds"
                    android:textColor="@color/common_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_next"
                style="@style/btn_style_main"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/common_page_left_right_space"
                android:layout_marginRight="@dimen/common_page_left_right_space"
                android:layout_width="186dp"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:text="@string/next" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
