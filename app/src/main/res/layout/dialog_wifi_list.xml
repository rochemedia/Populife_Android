<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="326dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/common_dialog_left_right_space"
    android:layout_marginRight="@dimen/common_dialog_left_right_space"
    android:background="@drawable/border_round_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_page_left_right_space"
    android:paddingBottom="@dimen/common_page_left_right_space">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/common_page_left_right_space"
        android:text="@string/wifi_select"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/dialog_title_size" />

    <include layout="@layout/layout_view_line" />

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:layout_height="0dp">
       <ListView
           android:visibility="gone"
           android:id="@+id/wifiListView"
           android:layout_width="match_parent"
           android:divider="@color/gray_line"
           android:dividerHeight="0.5dp"
           android:layout_height="match_parent"/>

       <TextView
           android:layout_gravity="center"
           android:textSize="14sp"
           android:textColor="@color/common_text_color"
           android:id="@+id/tv_search_state"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

   </FrameLayout>

    <include layout="@layout/layout_view_line" />

    <TextView
        android:id="@+id/tv_cancel_btn"
        style="@style/btn_style_main"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:background="@drawable/selector_btn_gray"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:text="@string/cancel" />

</android.support.v7.widget.LinearLayoutCompat>