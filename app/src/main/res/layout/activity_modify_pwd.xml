<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>

    <com.populstay.populife.ui.widget.exedittext.ExEditText
        app:label="@string/current_pwd"
        app:hint="@string/current_pwd"
        app:inputType="password"
        app:maxLength="20"
        android:id="@+id/et_modify_pwd_old"
        android:layout_marginTop="@dimen/common_edit_text_margin_top"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.populstay.populife.ui.widget.exedittext.ExEditText
        app:label="@string/new_pwd"
        app:hint="@string/new_pwd"
        app:inputType="password"
        app:maxLength="20"
        android:id="@+id/et_modify_pwd_new"
        android:layout_marginTop="@dimen/common_edit_text_margin_top"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.populstay.populife.ui.widget.exedittext.ExEditText
        app:label="@string/confirm_pwd"
        app:hint="@string/confirm_pwd"
        app:inputType="password"
        app:maxLength="20"
        android:id="@+id/et_modify_pwd_confirm"
        android:layout_marginTop="@dimen/common_edit_text_margin_top"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/note_pwd_format"
        android:textColor="@color/text_gray_light"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_save_btn"
        style="@style/btn_style_main"
        android:layout_marginTop="@dimen/sign_action_btn_margin_top"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:background="@drawable/selector_btn_main"
        android:enabled="false"
        android:text="@string/save" />


</LinearLayout>