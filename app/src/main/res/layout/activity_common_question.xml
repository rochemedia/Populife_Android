<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_view_titlebar"/>

    <!--android:paddingLeft="?android:attr/expandableListPreferredItemIndicatorLeft"-->
    <ExpandableListView
        android:id="@+id/eplv_common_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:childDivider="@color/gray_line"
        android:divider="@color/gray_line"
        android:dividerHeight="0.5dp"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/tv_feedback_btn"
        style="@style/btn_style_main"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginBottom="@dimen/common_page_left_right_space"
        android:background="@drawable/selector_btn_main"
        android:layout_gravity="bottom"
        android:text="@string/service_support_feedback" />

</LinearLayout>
