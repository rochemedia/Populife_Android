<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/layout_view_titlebar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_search_name"
            android:text="@string/label_please_input_equipment_number"
            android:layout_marginTop="0dp"
            style="@style/maintenance_request_item_label" />

        <TextView
            android:id="@+id/tv_find_the_device_number_btn"
            android:text="@string/hint_find_the_device_number"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_ffee2737"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.populstay.populife.ui.widget.exedittext.ExEditText
        android:id="@+id/edit_content"
        app:inputType="normal"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_finish"
        android:layout_marginLeft="@dimen/common_page_left_right_space"
        android:layout_marginRight="@dimen/common_page_left_right_space"
        style="@style/btn_style_main"
        android:enabled="false"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_btn_main"
        android:text="@string/next" />

</LinearLayout>
